<% #provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@employee,url:employees_path) do |f| %>
      <%= render 'shared/error_messages_employee' %>


      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Create new employee", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>